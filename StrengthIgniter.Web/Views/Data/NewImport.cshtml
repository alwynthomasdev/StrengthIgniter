@model NewImportViewModel
@{
    ViewData["Title"] = "New Import";
}
<form asp-action="import" method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
    </div>

    <div class="form-group">
        <label asp-for="SchemaReference" class="control-label"></label>
        <select asp-for="SchemaReference" asp-items="Model.SchemaOptions" class="form-control"></select>
        <span asp-validation-for="SchemaReference" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CsvFile" class="control-label"></label>
        <input asp-for="CsvFile" type="file" class="form-control-file" />
        <span asp-validation-for="CsvFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg w-100">Import</button>
    </div>

</form>