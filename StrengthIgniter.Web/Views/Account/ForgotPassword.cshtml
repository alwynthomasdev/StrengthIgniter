@model PasswordResetRequestViewModel
@{ 
    Layout = "~/Views/Shared/_ExtLayout.cshtml";
    ViewBag.Title = "Forgot Your Password";
}

    <form asp-action="passwordreset" method="post">
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg w-100">Request Reset</button>
        </div>
    </form>